<Window x:Class="CorsoWpf.DigitalManager.WpfApp.Dialogs.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorsoWpf.DigitalManager.WpfApp.Dialogs"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="ConfirmWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="sldValue" VerticalAlignment="Center" Margin="32,4" Minimum="0" Maximum="100" Value="50" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button x:Name="btnOk" Click="btnOk_Click" VerticalAlignment="Bottom" Content="OK" Width="100" Height="30" HorizontalAlignment="Right" />
            <Button x:Name="btnCancel" Click="btnCancel_Click" VerticalAlignment="Bottom" Content="Annulla" Width="100" Height="30" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>